# API Configuration
RIOT_API_KEY=RGAPI-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
DEFAULT_REGION=na1
API_REQUESTS_PER_SECOND=20
API_REQUESTS_PER_MINUTE=100
API_TIMEOUT=10
API_MAX_RETRIES=3

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=riftcat
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your_password_here@db:5432/riftcat

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Crawler Configuration
CRAWLER_MATCH_LIMIT=5
CRAWLER_MAX_DEPTH=3
CRAWLER_BATCH_SIZE=100
CRAWLER_QUEUE_TYPES=[400, 420, 440]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=data/riftcat.log

# PgAdmin
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=secure_password_here